<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#859C35BA">


    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="BIENVENIDO"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/text_bienvenida_1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <ImageView
        android:id="@+id/spyroLogo"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvIntro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="TODO"
        android:src="@drawable/logo_spiro_transparent"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spyroLogo"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/text_bienvenida_2"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <ImageView
        android:id="@+id/spyroFlying"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:contentDescription="todo"
        android:src="@drawable/spyro_flying_final" />

    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/spyroFlying"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/gema_button_text"
        tools:ignore="ImageContrastCheck" />
</RelativeLayout>
